        </Constraint>
        <Constraint android:id="@+id/cv_profile_img">
            <Layout
                android:layout_height="56dp"
                android:layout_width="56dp"
                android:layout_marginTop="16dp"
                motion:layout_constraintBottom_toBottomOf="@+id/cv_profile_img"
                motion:layout_constraintStart_toEndOf="@+id/cv_profile_img"
                motion:layout_constraintTop_toTopOf="@+id/cv_profile_img"/>
        </Constraint>
    </ConstraintSet>
</MotionScene>