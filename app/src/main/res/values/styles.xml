<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_green_A7D86D</item>
        <item name="colorPrimaryDark">@color/dark_green_89B358</item>
        <item name="colorAccent">@color/darker_green_FF658540</item>
        <item name="searchViewStyle">@style/sv_location</item>
    </style>

    <style name="sv_location" parent="Widget.AppCompat.Light.SearchView">
        <item name="submitBackground">@android:color/transparent</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>

    <style name="SingIn" parent="AppTheme">
        <item name="android:windowBackground">@color/light_green_A7D86D</item>
    </style>

    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/points_selector</item>
        <item name="android:minHeight">90dp</item>
        <item name="android:maxHeight">90dp</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">3</item>
    </style>

    <style name="add_new_restaurant_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/light_green_A7D86D</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="radiobtn_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textColor">@color/light_green_A7D86D</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="add_new_restaurant_dialog">
        <item name="android:windowBackground">@color/dialog_window_background</item>
    </style>

    <style name="place_details_snippet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textColor">@color/darker_green_FF658540</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
